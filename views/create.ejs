<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/public/stylesheets/style.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
    <style>
        .active {
            border-top-left-radius: 25px;
            border-bottom-left-radius: 25px;
            background-color: white;
            color: black;
        }
       @media only screen and (min-width: 430px) {
        .cart {
            height: 300px !important;
        }
       }

       @media only screen and (min-width: 530px) {
        .main-body {
            
        }
       }

       /* @media only screen and (min-width: 768px) {
        .main-body {
            width: calc(100% - 20%);
        }
       } */


    </style>

</head>
<body>
         <!-- Navbar -->
         <nav class="w-full flex justify-between px-3 py-4 border-b-2 fixed top-0 border-slate-400 bg-white z-10">

            <!-- Brand -->
            <div class="logo-brand flex items-center">
            <i class='menu bx bx-menu text-xl py-1 px-2 mt-1 mr-1 bg-slate-300 rounded-full transition-transform'></i>
            <h1 class="text-2xl">Admin Panel.</h1>
            </div>
       
            <ul class="hidden w-2/3 md:flex justify-end items-center gap-10 text-lg ">
              <li><a href="">Home</a></li>
              <li><a href="">Products</a></li>
              <li><a href="">Cart</a></li>
            </ul>
            <button class="px-2 text-xl bg-slate-300 rounded-full">My account</button>
           </nav>


          <!-- Main -->
          <div class="main-content flex mt-[72px] relative">



            <!-- Sidebar -->
          <div class="sidebar w-2/3 -translate-x-full pl-3 flex flex-col gap-7 py-10 text-white bg-slate-400 h-screen fixed md:sticky md:top-[72px] md:translate-x-0 md:w-[70px] transition-all">

            <!-- First div -->
            <div class="text-[18px] pl-3 flex gap-4 text-xl">
                <h1><span><i class='bx bx-filter-alt pr-'></i></span><span class="hide md:hidden">sort by:</span></h1>
                <button class="hide md:hidden border-2 px-1 border-slate-300">Popular <i class='bx bx-chevron-down'></i></button>
            </div>
            
            <ul class="text-[18px]">
                <li class="px-3 py-2"><i class='bx bx-collection pr-2'></i><a class="hide md:hidden" href="">Create New Product</a></li>
                <li class="active px-3 py-2"><i class='bx bxs-package   pr-2'></i><a class="hide md:hidden" href="">All Products</a></li>
                <li class="px-3 py-2"><i class='bx bxs-discount  pr-2'></i><a class="hide md:hidden" href="">Discounted Products</a></li>
                <li class="px-3 py-2 text-red-500"><i class='bx bx-trash pr-2'></i><a class="hide md:hidden" href="">Delete All</a></li>
            </ul>

            <ul class="hide md:hidden text-[18px]">
                <li class="pl-3 py-1"><a href="">Filter by:</a></li>
                <li class="pl-3 py-1"><a href="">Availability:</a></li>
                <li class="pl-3 py-1"><a href="">Discount:</a></li>
            </ul>
            
          </div>



            <!-- Main-body -->
            <div class="main-body w-full flex flex-col gap-5 px-8 sm:px-20 py-5 md:py-0 md:mt-7 md:px-14">
                               
                <div class="w-full pb-5 border-b-[1px] border-slate-500">
                    <h1 class="text-xl md:text-2xl font-medium">Create New Product</h1>
                  </div>
                  
                  <div>
                    <h3 class="text-xl">Product Details</h3>
                  </div>

                  <!-- Main for Two Parts -->
                  <div class="w-full flex flex-col md:flex-row">

                    <form action="" class="w-full">

                    <!-- Upper Div -->
                    <div>

                    <!-- Div1 -->
                    <div class="w-full flex mb-3 gap-4">
                    <label class="" for="productImage">Product Image</label>
                    <div>
                    <label for="productImage" class="mylabel block px-3 py-1 rounded-full bg-blue-500">Select File</label>
                    <input id="productImage" class="hidden" type="file" name="productImage">
                   </div>
                   </div>

                   <!-- div2 Image -->
                 <div class="w-full h-40 sm:h-60 mb-3 bg-red-500 rounded-md md:hidden overflow-hidden">
                    <img class="h-full w-full" src="images/uploads/defaultImage.png" alt="">
                 </div>

                 <!-- Input -->
                 <input class="w-[90%] mb-3 py-2 pl-2 bg-slate-100 rounded-sm" type="text" placeholder="Product Name">

                 <!-- div3 -->
                 <div class="flex mb-3 gap-2">
                    <input class="py-2 pl-2 w-1/3 bg-slate-100  rounded-sm" type="number" placeholder="Product Price">
                    <input class="py-2 pl-2 w-[37%] bg-slate-100  rounded-sm" type="number" placeholder="Discount Price">
                  </div>


                 </div>
                <!-- Upper Div Ends -->

                <!-- Lower Div -->
              <div>
                <h1 class="mt-10 md:mt-20 mb-2 text-xl">Panel Details</h1>

                <div class="w-full flex gap-2 mb-3">
                    <input class="py-2 pl-2 w-[40%] bg-slate-100 tracking-tighter" type="text" placeholder="Background Color">
                    <input class="py-2 pl-2 w-1/3 bg-slate-100 tracking-tighter" type="text" placeholder="Panel Color">
                </div>

                <div>
                 <input class="py-2 pl-2 w-1/3 bg-slate-100" type="text" placeholder="Text Color">
                </div>

              </div>

            </form>

             <div class="hidden md:mt-5 md:block md:w-3/4 md:h-80 rounded-md overflow-hidden">
                <img class="w-full h-full" src="images/uploads/defaultImage.png" alt="Default Image">
             </div>
            </div>
                  

              </div>

          </div>
          <!-- Main-Content -->

          <script>

            $(document).ready(function (){
              
                // Side Bar
                let flag = false;
                $('.menu').on('click', function(){
                    if(flag){
                    $(this).css('transform', 'rotate(0)');
                    $('.sidebar').addClass('-translate-x-full');
                    $('.sidebar').removeClass('translate-x-0');
                    $('.sidebar').removeClass('md:w-[350px]').addClass('md:w-[70px]');
                    $('.main-body').removeClass('md:w-full').addClass('md:w-[calc(100%-70px)]');
                    $('.hide').each(function (index, element) {
                    $(element).addClass('md:hidden');
                    });
                }
                else {
                    $(this).css('transform', 'rotate(90deg)');
                    $('.sidebar').removeClass('-translate-x-full');
                    $('.sidebar').addClass('translate-x-0'); 
                    $('.sidebar').removeClass('md:w-[70px]').addClass('md:w-[350px]');
                    $('.main-body').removeClass('md:w-[calc(100%-70px)]').addClass('md:w-full');
                    
                    $('.hide').each(function (index, element) {
                    $(element).removeClass('md:hidden');
                    });
                }
                   flag = !flag;
                });

               
            });
          </script>
</body>
</html>